<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.MVVM.Views.NewTerm"
             Title="NewTerm">

    <NavigationPage.TitleView>
        <Label Text="Add Terms" TextColor="White" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
    </NavigationPage.TitleView>

    <VerticalStackLayout Spacing="10">
        <Label Text="Term Name:"/>
        <Entry x:Name="TermName" Placeholder="Enter Term Name" Text="{Binding TermName}"/>
        <Label Text="Start Date:" />
        <DatePicker x:Name="StartDate" Date="{Binding StartDate}"/>
        <Label Text="End Date:"/>
        <DatePicker x:Name="EndDate" Date="{Binding EndDate}"/>
        <Button Text="Submit" Margin="10" Command="{Binding Submit}" BackgroundColor="Black"/>


    </VerticalStackLayout>
</ContentPage>