<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.MVVM.Views.EditTerm"
             Title="EditTerm">
    <VerticalStackLayout>

        <Frame Margin="10" BackgroundColor="{StaticResource Primary}">
            <Label Text="Term Information" TextColor="White"/>
        </Frame>
        
        <Frame Margin="10" BorderColor="{StaticResource Primary}">
            <Grid ColumnDefinitions=".5*,.5*" RowDefinitions="Auto, Auto, Auto">
                <Label Padding="10" Grid.Column="0" Grid.Row="0" Text="Term Name:"/>
                <Entry Grid.Column="1" Grid.Row="0" x:Name="TermName" Text="{Binding TermName}"/>
                <Label Padding="10" Grid.Column="0" Grid.Row="1" Text="Start Date:" />
                <DatePicker Grid.Column="1" Grid.Row="1" x:Name="StartDate" Date="{Binding TermStartDate}"/>
                <Label Padding="10" Grid.Column="0" Grid.Row="2" Text="End Date:"/>
                <DatePicker Grid.Column="1" Grid.Row="2" x:Name="EndDate" Date="{Binding TermEndDate}"/>
            </Grid>
        </Frame>
        <Button Text="Submit" Command="{Binding Submit}" BackgroundColor="Black" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>